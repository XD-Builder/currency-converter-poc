{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jasmine": true,
    "jest": true
  },
  "plugins": ["react"],
  "rules": {
    "import/prefer-default-export": "off",
    "import/no-named-as-default": "on",
    "prefer-destructuring": [
      "error",
      {
        "array": true,
        "object": false
      },
      {
        "enforceForRenamedProperties": false
      }
    ],
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/forbid-prop-types": [0],
    "react/require-default-props": [0],
    "global-require": [0]
  }
}
